{% extends 'base.html.twig' %}

{% block title %}MealPlan report!{% endblock %}
{% block body %}
    <div class="table-of-ingredients">
        <table class="table table-hover">
            <thead>
            <tr class="text-center">
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Unit</th>
            </tr>
            </thead>
            <tbody>
            {% for  item in report %}
                <tr class="text-center">
                    <td>{{ item[0] }}</td>
                    <td>{{ item[1] }}</td>
                    <td>{{ item[2] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}